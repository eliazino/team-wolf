<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@drawable/mapa">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/cashierName"
            android:text="Trade Store" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="30dp">
    <android.support.v7.widget.CardView
        android:id="@+id/CheckIn"
        android:layout_height="140dp"
        android:layout_width="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:background="#5DADE2"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="#5DADE2"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/register" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Register Retailer" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/report"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:background="#E59866"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="#E59866"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/payment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Purchase(s)" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>


<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    android:layout_marginBottom="30dp">
    <android.support.v7.widget.CardView
        android:id="@+id/stock"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:clickable="true"
        android:background="#AEB6BF "
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="#AEB6BF  "
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/stackofboxes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Fill Stock " />
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/log"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:clickable="true"
        android:background="#AEB6BF "
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="#AEB6BF  "
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/log" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Logs " />
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>


        <Button
            android:id="@+id/logout"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:background="#ff0040"
            android:clickable="true"
            android:textColor="#ffffff"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center"
            android:text="Logout">



        </Button>
    </LinearLayout>
</LinearLayout>